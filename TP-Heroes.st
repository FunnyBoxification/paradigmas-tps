dsFor: 'as yet unclassified' stamp: 'PabloRomero 9/25/2013 19:52'!nivel	^nivel! !!Heroe methodsFor: 'as yet unclassified' stamp: 'PabloRomero 9/25/2013 19:59'!nivel:n	nivel := n! !!Heroe methodsFor: 'as yet unclassified' stamp: 'PabloRomero 10/1/2013 01:20'!peleaCon:adversario 	historialAdversarios add:adversario.	(potencia > adversario potencia) ifTrue:[ self ganoPelea:adversario] ifFalse: [ adversario ganoPelea:self ].! !!Heroe methodsFor: 'as yet unclassified' stamp: 'PabloRomero 9/25/2013 19:56'!poder	^poder! !!Heroe methodsFor: 'as yet unclassified' stamp: 'PabloRomero 9/25/2013 19:56'!potencia	^potencia ! !!Heroe methodsFor: 'as yet unclassified' stamp: 'PabloRomero 10/1/2013 01:30'!potencia:x	potencia := x! !"-- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- "!Heroe class	instanceVariableNames: ''!!Heroe class methodsFor: 'as yet unclassified' stamp: 'PabloRomero 10/3/2013 23:00'!new	"Pa instanciar mejor los objetos :3"	| heroe |	heroe := self new.	heroe nivel:1.	heroe armas:Bag new.	heroe historialAdversarios:Set new.	^heroe.! !Object subclass: #PoderMistico	instanceVariableNames: 'poderesAcumulados potencia'	classVariableNames: ''	poolDictionaries: ''	category: 'TP-Heroes'!!PoderMistico methodsFor: 'as yet unclassified' stamp: 'PabloRomero 10/1/2013 01:29'!mejorarHabilidad:heroe y:adversario 		(adversario poder) otorgarPoder:heroe.! !!PoderMistico methodsFor: 'as yet unclassified' stamp: 'PabloRomero 10/3/2013 20:54'!otorgarPoder:heroe	| nuevoPoder |	nuevoPoder := PoderMistico new.	(heroe poderesAcumulados) add:nuevoPoder.! !!PoderMistico methodsFor: 'as yet unclassified' stamp: 'PabloRomero 10/3/2013 20:49'!poderesAcumulados	^poderesAcumulados! !!PoderMistico methodsFor: 'as yet unclassified' stamp: 'PabloRomero 10/1/2013 09:42'!poderesAcumulados:x 	poderesAcumulados := x! !"-- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- "!PoderMistico class	instanceVariableNames: ''!!PoderMistico class methodsFor: 'as yet unclassified' stamp: 'PabloRomero 10/1/2013 09:42'!new	"Pa instanciar mejor los objetos :3"	| poderMistico |	poderMistico := self new.	poderMistico  poderesAcumulados:Set new.	^poderMistico .! !Object subclass: #Sabiduria	instanceVariableNames: 'tiempoEnManosDeHeroe poder'	classVariableNames: ''	poolDictionaries: ''	category: 'TP-Heroes'!!Sabiduria methodsFor: 'as yet unclassified' stamp: 'PabloRomero 10/3/2013 20:44'!mejorarHabilidad:heroe y:adversario 	^self.! !!Sabiduria methodsFor: 'as yet unclassified' stamp: 'PabloRomero 10/3/2013 21:16'!otorgarPoder:heroe	|nuevoPoder|	nuevoPoder := Sabiduria new.	nuevoPoder tiempo:((self tiempo)*2).	((heroe poder) poderesAcumulados) add:nuevoPoder.! !!Sabiduria methodsFor: 'as yet unclassified' stamp: 'PabloRomero 10/3/2013 20:56'!sumarDia	tiempoEnManosDeHeroe := tiempoEnManosDeHeroe + 2.! !!Sabiduria methodsFor: 'as yet unclassified' stamp: 'PabloRomero 10/3/2013 21:00'!tiempo	^tiempoEnManosDeHeroe ! !!Sabiduria methodsFor: 'as yet unclassified' stamp: 'PabloRomero 10/3/2013 21:00'!tiempo:x	tiempoEnManosDeHeroe := x! !