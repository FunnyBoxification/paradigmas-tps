as yet unclassified' stamp: 'PabloRomero 9/25/2013 19:52'!nivel	^nivel! !!Heroe methodsFor: 'as yet unclassified' stamp: 'PabloRomero 9/25/2013 19:59'!nivel:n	nivel := n! !!Heroe methodsFor: 'as yet unclassified' stamp: 'PabloRomero 10/1/2013 01:20'!peleaCon:adversario 	historialAdversarios add:adversario.	(potencia > adversario potencia) ifTrue:[ self ganoPelea:adversario] ifFalse: [ adversario ganoPelea:self ].! !!Heroe methodsFor: 'as yet unclassified' stamp: 'PabloRomero 9/25/2013 19:56'!poder	^poder! !!Heroe methodsFor: 'as yet unclassified' stamp: 'PabloRomero 10/3/2013 23:17'!poder:x	poder:=x! !!Heroe methodsFor: 'as yet unclassified' stamp: 'PabloRomero 9/25/2013 19:56'!potencia	^potencia ! !!Heroe methodsFor: 'as yet unclassified' stamp: 'PabloRomero 10/1/2013 01:30'!potencia:x	potencia := x! !"-- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- "!Heroe class	instanceVariableNames: ''!!Heroe class methodsFor: 'as yet unclassified' stamp: 'PabloRomero 10/3/2013 23:34'!new	"Pa instanciar mejor los objetos :3"	| heroe |	heroe := super new.	heroe nivel:1.	heroe armas:Bag new.	heroe historialAdversarios:Set new.	^heroe.! !!Heroe class methodsFor: 'as yet unclassified' stamp: 'PabloRomero 10/4/2013 19:53'!new:poder con:armas	"Pa instanciar mejor los objetos :3"	| heroe |	heroe := super new.	heroe nivel:1.	heroe armas:Bag new.	heroe historialAdversarios:Set new.	heroe poder:poder.	heroe armas:armas.	^heroe.! !Object subclass: #PoderMistico	instanceVariableNames: 'poderesAcumulados potencia'	classVariableNames: ''	poolDictionaries: ''	category: 'TP-Heroes'!!PoderMistico methodsFor: 'as yet unclassified' stamp: 'PabloRomero 10/1/2013 01:29'!mejorarHabilidad:heroe y:adversario 		(adversario poder) otorgarPoder:heroe.! !!PoderMistico methodsFor: 'as yet unclassified' stamp: 'PabloRomero 10/3/2013 20:54'!otorgarPoder:heroe	| nuevoPoder |	nuevoPoder := PoderMistico new.	(heroe poderesAcumulados)